        .purchase__blocks__subscribe-container_top__cta-content__title
          = t('.devices')
  .purchase__blocks__subscribe-container_bottom
    .purchase__blocks__subscribe-container_bottom__subscription-form
      .shared__purchase-button-container
        button.shared__purchase-button_subscribe data-toggle="modal" data-target="#credit-card-modal" = t('.upgrade', price: @plans.first.price, period: @plans.first.name)
        input#subscribe_product_id name="plan_id" type="hidden" value= @plans.first.id
      .purchase__blocks__subscribe-container_bottom__product-selector-container
        p.purchase__blocks__subscribe-container_bottom__product-selector__cta-opening data-default-text=("Bill me") = t('.bill_me')
        select#subscribe_product_id.purchase__blocks__subscribe-container_bottom__product-selector name="subscribe[product_id]" data-max-price=@plans.last.price
          - @plans.each do |plan|
            option data-price=plan.price data-plan-name=plan.name data-plan-id=plan.id
              = plan.name.downcase
        p.purchase__blocks__subscribe-container_bottom__product-selector__cta-closing
          = t('.and')
          span.purchase__blocks__subscribe-container_bottom__product-selector__cta-closing__percentage-saved__appendix = t('.save')
          span.purchase__blocks__subscribe-container_bottom__product-selector__cta-closing__percentage-saved = get_saved_percentage(@plans.last.price, @plans.first.price)
